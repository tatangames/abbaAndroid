<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo cuando no está en foco -->
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorLineaSinFocoClaro" />
                </shape>
            </item>
            <!-- Línea de borde -->
            <item
                android:bottom="2dp"
                android:left="-2dp"
                android:right="-2dp">
                <shape>
                    <solid android:color="@color/colorLineaSinFocoOscuro" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Fondo cuando está en foco -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorLineaConFocoClaro" />
                </shape>
            </item>
            <!-- Línea de borde -->
            <item
                android:bottom="2dp"
                android:left="-2dp"
                android:right="-2dp">
                <shape>
                    <solid android:color="@color/colorLineaConFocoClaro" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>