<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>

        <item name="colorSecondary">@color/colorRed</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/colorLineaConFocoClaro</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <!-- Color de fondo del BottomNavigationView en modo oscuro -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark2</item>

        <!-- Color del texto y de los elementos del menú en modo oscuro -->
        <item name="android:textColorPrimary">@color/bottomNavigationItemColor</item>

        <!-- Configurar el estilo del texto del BottomNavigationView en modo oscuro -->
        <item name="bottomNavigationStyle">@style/AppBottomNavigationView</item>


        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>



    </style>

    <!-- ESTILO BOTON PARA IR A LOGIN -->
    <style name="ButtonStyleLogin" parent="Widget.MaterialComponents.Button">
        <!-- Puedes quitar el atributo colorPrimary aquí -->
        <item name="android:background">@drawable/boton_redondeado_negro</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>


    <!-- ESTILO BOTON PARA IR A REGISTRO -->
    <style name="ButtonStyleRegistro" parent="Widget.MaterialComponents.Button">
        <!-- Puedes quitar el atributo colorPrimary aquí -->
        <item name="android:background">@drawable/boton_redondeado_negro_linea_blanca</item>
    </style>

    <!-- ESTO LO LLEVARAN TODOS LOS TEXTVIEW PARA COLOR  BLANCO/OSCURO. -->
    <style name="TEXTVIEW_WHITE_DARK_TEMA">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ESTO LO LLEVARAN TODOS LOS FONDOS PARA COLOR  BLANCO/OSCURO. -->
    <style name="BACKGROUND_WHITE_DARK_TEMA">
        <item name="android:background">@color/black</item>
    </style>

    <!-- ESTO LO LLEVARAN TODOS LOS TOOLBAR PARA COLOR  BLANCO/OSCURO. -->
    <style name="TOOLBAR_V1_WHITE_DARK_TEMA">
        <item name="android:background">@color/colorBordeToolbar</item>
    </style>

    <!-- ESTO LO LLEVARAN LAS DIVISIONES DE UN RECYCLERVIEW -->
    <style name="DIVISIONES_WHITE_DARK_TEMA">
        <item name="android:background">@color/white</item>
    </style>

    <!-- ESTO LO LLEVARA TODAS LAS FECHAS LEFT -->
    <style name="FLECHA_LEFT_TEMA">
        <item name="android:tint">@color/white</item>
    </style>



    <!-- ESTO LO LLEVARA TODOS LOS TEXT INPUT LAYOUT -->
    <style name="TEXT_INPUT_LAYOUT" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/white</item>
        <item name="cursorColor">@color/colorRed</item>
    </style>

    <!-- ESTO LO LLEVARA TODOS LOS INPUT EDIT TEXT -->
    <style name="INPUT_EDIT_TEXT_TEMA" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ESTO LO LLEVARA TODOS LOS INPUT EDIT TEXT -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/background_spinner_dark</item>
    </style>










    <style name="Style_HintInput" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">18sp</item>

    </style>







    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:textColorPrimaryInverse">@color/white</item> <!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorSecondaryInverse">@color/white</item> <!-- header year color -->

        <item name="android:colorAccent">@color/black</item> <!-- button color -->
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/black</item> <!-- header background color -->
    </style>




































    <style name="BotonRedondoLogin">
        <item name="android:background">@drawable/btn_style_login</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BotonRedondoRegistroNegro">
        <item name="android:background">@drawable/btn_style_registro_negro</item>
    </style>

    <style name="BotonRedondoRegistroGris">
        <item name="android:background">@drawable/btn_style_registro_gris</item>
    </style>






    <style name="Style_ErrorInput" parent="@android:style/TextAppearance">
        <item name="errorTextColor">@color/colorRed</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>