<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EstiloAbba" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>


        <!-- Color de fondo del BottomNavigationView en modo oscuro -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark2</item>

        <!-- Color del texto y de los elementos del menÃº en modo oscuro -->
        <item name="android:textColorPrimary">@color/bottomNavigationItemColor</item>

        <!-- Configurar el estilo del texto del BottomNavigationView en modo oscuro -->
        <item name="bottomNavigationStyle">@style/AppBottomNavigationView</item>

    </style>

    <!-- ESTO LO LLEVARAN TODOS LOS TEXTVIEW PARA COLOR  BLANCO/OSCURO. -->
    <style name="TEXTVIEW_WHITE_DARK_TEMA">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ESTO LO LLEVARAN TODOS LOS FONDOS PARA COLOR  BLANCO/OSCURO. -->
    <style name="BACKGROUND_WHITE_DARK_TEMA">
        <item name="android:background">@color/black</item>
    </style>

    <!-- ESTO LO LLEVARAN TODOS LOS TOOLBAR PARA COLOR  BLANCO/OSCURO. -->
    <style name="TOOLBAR_V1_WHITE_DARK_TEMA">
        <item name="android:background">@color/colorBordeToolbar</item>
    </style>

    <!-- ESTO LO LLEVARAN LAS DIVISIONES DE UN RECYCLERVIEW -->
    <style name="DIVISIONES_WHITE_DARK_TEMA">
        <item name="android:background">@color/white</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />











    <style name="BotonRedondoLogin">
        <item name="android:background">@drawable/btn_style_login</item>
    </style>

    <style name="BotonRedondoRegistroNegro">
        <item name="android:background">@drawable/btn_style_registro_negro</item>
    </style>

    <style name="BotonRedondoRegistroGris">
        <item name="android:background">@drawable/btn_style_registro_gris</item>
    </style>


    <style name="Style_TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/colorTextoGris</item>
    </style>


    <style name="Style_HintInput" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/colorTextoGris</item>
    </style>


    <style name="Style_ErrorInput" parent="TextAppearance.Design.Error">
        <item name="errorTextColor">@color/colorRed</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>