<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorFondosTemaLightDark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txtDevocionalDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:text="@string/devocional_del_dia"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/colorGrey_White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDevocional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/colorTextoLightDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDevocionalDia" />


    <ImageView
        android:id="@+id/imgShare"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/icono_compartir_negro"
        app:layout_constraintEnd_toStartOf="@+id/imgOpciones"
        app:layout_constraintTop_toBottomOf="@+id/txtDevocional" />

    <ImageView
        android:id="@+id/imgOpciones"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/tres_puntos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDevocional" />


</androidx.constraintlayout.widget.ConstraintLayout>