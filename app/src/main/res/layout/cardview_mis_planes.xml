<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ImageView con esquinas redondeadas -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/borde_redondeado_imageview"
        android:scaleType="centerCrop"
        android:src="@drawable/devocional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView a la derecha de la ImageView -->

    <!-- ProgressBar debajo de la ImageView -->

    <TextView
        android:id="@+id/textViewSubTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@id/imageView"
        android:text="sub Título"
        android:textColor="@color/colorTextoGrayDark"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toStartOf="@+id/btnVer"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSubTitulo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@id/imageView"
        android:text="titulo"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/colorTextoGrayDark"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnVer"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubTitulo" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="25dp"
        android:progress="15"
        android:progressDrawable="@drawable/progress_bar_redondo"
        android:progressTint="#FF4081"
        app:layout_constraintStart_toStartOf="@+id/textViewSubTitulo2"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubTitulo2" />

    <Button
        android:id="@+id/btnVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/borde_redondeado_imageview"
        android:fontFamily="@font/elvetica_medium"
        android:text="@string/ver"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubTitulo" /> <!-- Cambia este valor según tus necesidades -->

</androidx.constraintlayout.widget.ConstraintLayout>