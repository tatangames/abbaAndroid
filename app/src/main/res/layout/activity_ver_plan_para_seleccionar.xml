<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootRelative"
    style="@style/BACKGROUND_WHITE_DARK_TEMA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/toolbar_flecha_txt_v2"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgPlan"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:shapeAppearanceOverlay="@style/radius"
                    android:contentDescription="@string/logo"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorTextoLightDark"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/txtSubtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/colorTextoGrayDark"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/botonComenzar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/boton_redondeado_negro"
                    android:fontFamily="@font/elvetica_medium"
                    android:text="@string/iniciar"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</RelativeLayout>