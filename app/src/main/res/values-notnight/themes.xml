<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>

        <item name="colorSecondary">@color/colorRed</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/colorRed</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="bottomNavigationStyle">@style/AppBottomNavigationView</item>

        <!-- Color de fondo del BottomNavigationView en modo oscuro -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark2</item>

        <!-- Color del texto y de los elementos del menú en modo oscuro -->
        <item name="android:textColorPrimary">@color/bottomNavigationItemColor</item>


    </style>

    <!-- ESTILO BOTON PARA IR A LOGIN -->
    <style name="ButtonStyleLogin" parent="Widget.MaterialComponents.Button">
        <!-- Puedes quitar el atributo colorPrimary aquí -->
        <item name="android:background">@drawable/boton_redondeado_negro</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <!-- ESTILO BOTON PARA IR A REGISTRO -->


    <style name="ButtonStyleRegistroActivado" parent="Widget.MaterialComponents.Button">
        <!-- Puedes quitar el atributo colorPrimary aquí -->
        <item name="android:background">@drawable/boton_redondeado_negro_linea_blanca</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="ButtonStyleRegistro" parent="Widget.MaterialComponents.Button">
        <!-- Puedes quitar el atributo colorPrimary aquí -->
        <item name="android:background">@drawable/boton_redondeado_negro</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <!-- ESTO LO LLEVARAN TODOS LOS TEXTVIEW PARA COLOR  BLANCO/OSCURO. -->
    <style name="TEXTVIEW_WHITE_DARK_TEMA">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ESTO LO LLEVARAN TODOS LOS FONDOS PARA COLOR  BLANCO/OSCURO. -->
    <style name="BACKGROUND_WHITE_DARK_TEMA">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TOOLBAR_V1_WHITE_DARK_TEMA">
        <item name="android:background">@color/white</item>
    </style>

    <!-- ESTO LO LLEVARAN LAS DIVISIONES DE UN RECYCLERVIEW -->
    <style name="DIVISIONES_WHITE_DARK_TEMA">
        <item name="android:background">@color/white</item>
    </style>

    <!-- ESTO LO LLEVARA TODAS LAS FECHAS LEFT -->
    <style name="FLECHA_LEFT_TEMA">
        <item name="android:tint">@color/black</item>
    </style>

    <!-- ESTO LO LLEVARA TODOS LOS TEXT INPUT LAYOUT -->
    <style name="TEXT_INPUT_LAYOUT" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Otros atributos de estilo aquí -->
        <item name="android:background">@color/white</item>
        <item name="hintTextColor">@color/colorTextoGris</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="cursorColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorTextoGris</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- ESTO LO LLEVARA TODOS LOS INPUT EDIT TEXT -->
    <style name="INPUT_EDIT_TEXT_TEMA" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ESTILO PARA LOS SPINNER -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/background_spinner_light</item>
    </style>




    <style name="KAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Otros atributos de estilo aquí -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">16dp</item> <!-- Ajusta según sea necesario -->
        <item name="android:paddingEnd">16dp</item> <!-- Ajusta según sea necesario -->
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">16dp</item> <!-- Ajusta según sea necesario -->
        <item name="android:paddingEnd">16dp</item> <!-- Ajusta según sea necesario -->
    </style>









    <style name="Style_HintInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">18sp</item>




    </style>













    <style name="AppBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!-- Configurar el color de fondo en modo claro -->
        <item name="android:background">@color/colorPrimary</item>

        <!-- Configurar el color del texto en modo claro -->
        <item name="itemTextColor">@color/colorAccent</item>

        <!-- Configurar el color del texto seleccionado en modo claro -->
        <item name="itemTextAppearanceActive">@style/AppBottomNavigationView.ActiveTextAppearance</item>

        <!-- Configurar el color del texto no seleccionado en modo claro -->
        <item name="itemTextAppearanceInactive">@style/AppBottomNavigationView.InactiveTextAppearance</item>
    </style>

    <style name="AppBottomNavigationView.ActiveTextAppearance" parent="Widget.Design.BottomNavigationView">
        <!-- Configurar el color del texto seleccionado en modo claro -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppBottomNavigationView.InactiveTextAppearance" parent="Widget.Design.BottomNavigationView">
        <!-- Configurar el color del texto no seleccionado en modo claro -->
        <item name="android:textColor">@color/bottomNavigationItemColor</item>
    </style>






    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>











    <style name="BotonRedondoLogin">
        <item name="android:background">@drawable/btn_style_login</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BotonRedondoRegistroNegro">
        <item name="android:background">@drawable/btn_style_registro_negro</item>
    </style>

    <style name="BotonRedondoRegistroGris">
        <item name="android:background">@drawable/btn_style_registro_gris</item>
    </style>




    <style name="Style_ErrorInput" parent="@android:style/TextAppearance">
        <item name="errorTextColor">@color/colorRed</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>